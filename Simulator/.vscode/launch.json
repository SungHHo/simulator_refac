{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "C++ debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/SurfaceToAirWeaponSystem", // 실행 파일 경로
			"args": [], // 실행 인자
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"miDebuggerPath": "/usr/bin/gdb", // gdb 설치 경로 (리눅스 기준)
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		},
	]
}